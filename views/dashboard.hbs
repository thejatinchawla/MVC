     <script>
        function handleCredentialResponse(response) {
          console.log("Encoded JWT ID token: " + response.credential);
          var token = response.credential
          var base64Url = token.split('.')[1];
          var base64 = base64Url.replace(/-/g, '+').replace(/_/g, '/');
          var jsonPayload = decodeURIComponent(window.atob(base64).split('').map(function(c) {
                return '%' + ('00' + c.charCodeAt(0).toString(16)).slice(-2);
            }).join(''));
          var encoded = JSON.parse(jsonPayload);
          console.log(encoded)
          document.getElementById("name").innerHTML = encoded.given_name 
          document.getElementById("fname").innerHTML = encoded.family_name
          document.getElementById("email").innerHTML = encoded.email

        }
        window.onload = function () {
          google.accounts.id.initialize({
            client_id: "199078515632-q7dgfn39igo885jkb875hgdbv73gm4ka.apps.googleusercontent.com",
            callback: handleCredentialResponse
          });
          google.accounts.id.renderButton(
            document.getElementById("buttonDiv"),
            { theme: "outline", size: "large" }  // customization attributes
          );
          google.accounts.id.prompt(); // also display the One Tap dialog
